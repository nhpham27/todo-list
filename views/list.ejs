<%- include("header"); -%>

<body>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
            <% for(var i=0; i < listItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= listItems[i] %></p>
                </div>
                <% } %>
    
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" required>
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    
</body>

<%- include("footer"); -%>